# =============================================================================
# Audio Processing Project - Environment Configuration
# =============================================================================
# 复制此文件为 .env 并填入你的实际配置值

# Gemini API Configuration
# 从 Google AI Studio 获取你的 API 密钥: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Model Settings
GEMINI_MODEL_NAME=gemini-2.5-pro
GEMINI_MAX_RETRIES=3
GEMINI_RETRY_DELAY=5
GEMINI_TIMEOUT=300

# File Processing Settings
MAX_FILE_SIZE_MB=100
SUPPORTED_AUDIO_FORMATS=mp3,wav,m4a,flac,ogg
DEFAULT_OUTPUT_FORMAT=srt

# Upload and Processing Settings
UPLOAD_TIMEOUT=600
PROCESSING_CHECK_INTERVAL=10
MAX_PROCESSING_WAIT_TIME=1800

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=structured
LOG_FILE_PATH=logs/audio_processing.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Application Settings
APP_NAME=Audio Processing Tool
APP_VERSION=1.0.0
DEBUG=false

# Output Settings
DEFAULT_OUTPUT_DIR=output
CREATE_TIMESTAMP_DIRS=true
OVERWRITE_EXISTING=false

# Performance Settings
MAX_CONCURRENT_UPLOADS=3
ENABLE_PROGRESS_BAR=true
ENABLE_CACHING=true
CACHE_DIR=.cache

# Advanced Settings
CUSTOM_PROMPT_FILE=config/custom_prompt.txt
ENABLE_AUDIO_VALIDATION=true
AUTO_CLEANUP_TEMP_FILES=true
